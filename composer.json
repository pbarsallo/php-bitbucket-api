{
    "name": "pbarsallo/php-bitbucket-api",
    "type": "library",
    "description": "PHP client for Bitbucket Cloud 2.0 API",
    "keywords": [
        "bitbucket",
        "api"
    ],
    "homepage": "https://github.com/pbarsallo/php-bitbucket-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Barsallo",
            "email": "p.d.barsallo@gmail.com",
            "homepage": "https://github.com/pbarsallo",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3",
        "lcobucci/jwt": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bitbucket\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bitbucket\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
